<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xzty.cq.tover.businessmanagement.projectmanagement.tool.activity.projectmanagedepartment.back.ToolPMBackAuditDetailsActivity">
    <com.xzty.cq.tover.businessmanagement.common.view.TitleLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_choose_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请选择一种返库类型"
        android:layout_below="@id/title"
        android:gravity="center"
        android:textColor="@color/item_text_no"
        android:textSize="16dp"
        />
    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/tv_choose_type"
        android:id="@+id/recycle_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/bt_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="确认审核，并将选中项返库"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        />
</RelativeLayout>
