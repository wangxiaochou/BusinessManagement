<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:descendantFocusability="beforeDescendants"
    android:weightSum="7"
    >

    <TextView
        android:id="@+id/item_tv_pickpartcountset_listno"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="1"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"/>

    <TextView
        android:id="@+id/item_tv_pickpartcountset_partname"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:hint="名称"
        android:gravity="center"
        android:layout_gravity="center_vertical" />

    <TextView
        android:id="@+id/item_tv_pickpartcountset_partno"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:hint="编号"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_gravity="center_vertical" />

    <TextView
        android:id="@+id/item_tv_pickpartcountset_applybatch"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:hint="1批"
        android:gravity="center"
        android:layout_gravity="center_vertical" />

    <TextView
        android:id="@+id/item_tv_pickpartcountset_outbatch"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:hint="1批"
        android:gravity="center"
        android:layout_gravity="center_vertical" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/item_iv_pickpartcountset_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_indeterminate_check_box_light_blue_400_24dp"
            android:padding="3dp"
            />

        <TextView
            android:id="@+id/item_tv_pickpartcountset_needcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="2"
            android:inputType="numberDecimal"
            android:gravity="center"
            android:background="@drawable/edit_bg"
            android:maxLines="1"
            android:hint="0" />
        <TextView
            android:id="@+id/item_tv_pickpartcountset_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="件"/>

        <ImageView
            android:id="@+id/item_iv_pickpartcountset_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_box_light_blue_400_24dp"
            android:padding="3dp"
            />

    </LinearLayout>



</LinearLayout>
