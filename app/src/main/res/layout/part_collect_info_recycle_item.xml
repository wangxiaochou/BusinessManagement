<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    >

    <TextView
        android:id="@+id/tv_space"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="区域"
        android:gravity="center" />

    <TextView
        android:id="@+id/item_tv_distinfofillin_partname"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="名称"
        android:gravity="center" />

    <TextView
        android:id="@+id/item_tv_distinfofillin_partno"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="编号"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/item_tv_distinfofillin_needcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="需求量"
            android:gravity="center" />
        <TextView
            android:id="@+id/item_tv_distinfofillin_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>


    <TextView
        android:id="@+id/item_tv_distinfofillin_expettime"
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:layout_height="wrap_content"
        android:text="时间"
        android:gravity="center" />

    <TextView
        android:id="@+id/item_tv_distinfofillin_applybatch"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="批次"
        android:gravity="center" />

</LinearLayout>
