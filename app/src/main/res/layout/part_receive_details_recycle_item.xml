<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp">

    <TextView
        android:id="@+id/tv_space"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="1"
        android:layout_weight="0.8"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/item_tv_outfillininfo_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:textSize="14sp"
        android:gravity="center"
        android:hint="支撑"/>
    <TextView
        android:id="@+id/item_tv_outfillininfo_partno"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:textSize="14sp"
        android:gravity="center"
        android:hint="9GZL-1"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:id="@+id/item_tv_outfillininfo_needcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:hint="2"/>
        <TextView
            android:id="@+id/item_tv_outfillininfo_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="件"/>

    </LinearLayout>

    <TextView
        android:id="@+id/item_tv_outfillininfo_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:textSize="14sp"
        android:gravity="center"
        android:hint="2017-11-30"/>
    <TextView
        android:id="@+id/item_tv_outfillininfo_batch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:textSize="14sp"
        android:gravity="center"
        android:hint="1批"/>


</LinearLayout>
